class Solution {
public:
    string countAndSay(int n) {
        string dp[n+1];
        dp[0]='0';dp[1]='1';
        for(int k=2;k<=n;k++)
        {
            dp[k]="";
            int count=1;
            for(int i=0;i<dp[k-1].length();i++)
            {
                // cout<<i<<endl;
                if(dp[k-1][i+1]!='\0'&&dp[k-1][i]==dp[k-1][i+1]) 
                   {
                       
                       count++;
                    }
                else
                {
                    dp[k]+=std::to_string(count)+dp[k-1][i];
                  
                    count=1;
                   //cout<<dp[k]<<endl;
                }
            }
        }
        return dp[n];
    } 
};
